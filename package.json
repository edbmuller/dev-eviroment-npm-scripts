{
	"name": "dev-enviroment-npm-scripts",
	"version": "1.0.0",
	"description": "Development enviroment using npm scripts insted of building abstractions like gulp and grunt",
	"author": "Eduardo Bonamigo",
	"license": "MIT",
	"scripts": {
		"prestart": "babel-node buildScripts/startMessage.js",
		"start": "npm-run-all --parallel server:express lint:watch",
		"server:express": "babel-node buildScripts/srcServer.js",
		"server:browsersync": "cd src & browser-sync start --server --files \"*\"",
		"lint": "esw webpack.config.* src buildScripts --color",
		"lint:watch": "npm run lint -- --watch"
	},
	"dependencies": {
		"whatwg-fetch": "3.4.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.10.5",
		"@babel/core": "^7.11.4",
		"@babel/node": "^7.10.5",
		"@babel/polyfill": "^7.10.4",
		"@babel/preset-env": "^7.11.0",
		"babel-loader": "^8.1.0",
		"chalk": "4.1.0",
		"cheerio": "0.22.0",
		"compression": "1.7.4",
		"cross-env": "7.0.2",
		"css-loader": "^4.2.1",
		"eslint": "^7.7.0",
		"eslint-plugin-import": "2.22.0",
		"eslint-watch": "7.0.0",
		"express": "4.17.1",
		"extract-text-webpack-plugin": "3.0.2",
		"html-webpack-plugin": "4.3.0",
		"nock": "13.0.4",
		"npm-run-all": "4.1.5",
		"nsp": "3.2.1",
		"open": "7.1.0",
		"rimraf": "3.0.2",
		"style-loader": "1.2.1",
		"surge": "0.21.6",
		"webpack": "4.44.1",
		"webpack-dev-middleware": "3.7.2",
		"webpack-hot-middleware": "2.25.0",
		"webpack-md5-hash": "0.0.6"
	}
}
